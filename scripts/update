#!/bin/bash

set -e

if [[ -n "${ASHLAR_BLUEPRINT_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n "Usage: $(basename "$0")

Builds and pulls container images using docker-compose, and runs database migrations.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        # Build containers.
        docker-compose build

        # Run migrations.
        docker-compose run ashlar-server manage.py wait_for_db_and_migrate

        # Install NPM modules.
        docker-compose run --rm --no-deps schema-editor yarn
    fi
fi
